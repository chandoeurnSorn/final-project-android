<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="117dp"
        android:layout_height="113dp"
        android:src="@drawable/images"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="27dp"
        android:layout_height="21dp"
        android:src="@drawable/english_flag"
        tools:ignore="MissingConstraints"
        android:layout_toEndOf="@id/img1"
        android:layout_marginStart="180dp"
        android:layout_marginTop="45dp"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/textEng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EN"
        android:textSize="16sp"
        android:layout_toEndOf="@id/img2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        app:layout_constraintVertical_bias="0.067" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Khmer Agriculture App!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/img1"
        android:layout_marginTop="130dp"/>

    <TextView
        android:id="@+id/textInform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please input your information"
        android:textColor="@color/disabled_color"
        android:textSize="20sp"
        android:layout_below="@id/text1"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/textInform"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="@color/gray"
        android:hint="Enter your name"
        android:inputType="phone"
        android:paddingStart="18dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/etName"
        android:layout_marginTop="30dp"
        android:hint="Enter your phone number"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="@color/gray"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/etEmail"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_corner"
        android:backgroundTint="@color/disabled_color"
        android:text="Enter"
        android:textSize="18sp"
        android:textAlignment="center"/>

</RelativeLayout>